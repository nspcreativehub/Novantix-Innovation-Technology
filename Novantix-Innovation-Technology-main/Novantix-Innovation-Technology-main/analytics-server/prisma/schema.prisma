generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Visitor uses client-generated UUID as the ID (not auto-generated ObjectId)
model Visitor {
  id        String   @id @map("_id")
  createdAt DateTime @default(now())
  sessions  Session[]
  events    Event[]
  pageViews PageView[]
}

// Session uses client-generated UUID as the ID
model Session {
  id        String   @id @map("_id")
  visitorId String
  startTime DateTime @default(now())
  endTime   DateTime?
  duration  Int?     @default(0)
  visitor   Visitor  @relation(fields: [visitorId], references: [id])
  pageViews PageView[]
  events    Event[]
}

model PageView {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionId String
  visitorId String
  url       String
  referrer  String?
  timestamp DateTime @default(now())
  duration  Int?     @default(0)
  session   Session  @relation(fields: [sessionId], references: [id])
  visitor   Visitor  @relation(fields: [visitorId], references: [id])
}

model Event {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionId String
  visitorId String
  type      String
  url       String?
  payload   String?
  timestamp DateTime @default(now())
  visitor   Visitor  @relation(fields: [visitorId], references: [id])
  session   Session  @relation(fields: [sessionId], references: [id])
}
